---
import Layout from '../layouts/Layout.astro';
---

<Layout title="altrapagina">
  <div class="container">
    <h1 id="myH1">Wordpress non mi piace per niente</h1>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100svh;

    h1 {
      font-size: 1px;
      animation: wordpress 3s infinite alternate;
      max-width: 100svw;
    }
  }
  @keyframes wordpress {
    0% {
      font-size: 1px;
    }
    100% {
      font-size: 5rem;
    }
  }
</style>

<script>
  const h1El = document.getElementById('myH1')!;
  let color: number = Math.floor(Math.random() * 360);

  setInterval(() => {
    color += 1;
    if (color === 360) color = 0;
    h1El.style.color = `hsl(${color},${Math.floor(Math.random() * 10 + 90)}%,${Math.floor(Math.random() * (50 - 40) + 40)}%)`;
    console.log(color);
  }, 1000);
</script>
